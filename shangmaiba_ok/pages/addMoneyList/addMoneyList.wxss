/* pages/addMoneyList/addMoneyList.wxss */

.page {
  width: 100%;
  height: 100%;
  position: fixed;
  padding-top: 10rpx;
  background: #efefef;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.item {
  background: white;
  width: 100%;
  height: 160rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #efefef;
}

.money {
  height: 160rpx;
  display: inline-block;
  line-height: 160rpx;
  position: absolute;
  color: rgb(221, 86, 86);
  font-size: 20px;
  right: 20rpx;
}

.type {
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
  position: absolute;
  font-size: 14px;
  color: #646464;
  left: 20rpx;
}

.time {
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
  color: #c4c4c4;
  position: absolute;
  left: 20rpx;
  margin-top: 80rpx;
  font-size: 14px;
}
