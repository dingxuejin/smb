/* pages/feedback/feedback.wxss */

.page {
  width: 100%;
  height: 100%;
  display: flex;
  position: fixed;
  justify-content: center;
  border-top: 1px solid #c4c4c4;
}

.page_textarea {
  width: 640rpx;
  height: 400rpx;
  margin-top: 40rpx;
  padding: 8px;
  border: 1px solid #c4c4c4;
}

.page_btn {
  bottom: 0;
  position: fixed;
  width: 100%;
  background: #444;
  height: 100rpx;
  border-radius: 0;
  color: white;
  line-height: 100rpx;
}
