/* pages/personal/personal.wxss */

.page {
  width: 100%;
  height: 100%;
  overflow: auto;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.page_top {
  width: 100%;
  height: 360rpx;
}

.page_top  text {
  width: 100%;
  position: absolute;
  height: 60rpx;
  text-align: center;
  display: inline-block;
  color: #646464;
  margin-top: 250rpx;
}

.page_top_bg {
  width: 100%;
  position: absolute;
  height: 360rpx;
}

.page_head_bg {
  margin-top: 60rpx;
  position: absolute;
  margin-left: calc(50% - 80rpx);
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #999;
  border-radius: 160rpx;
}

.page_head_bg image {
  width: calc(100% - 20rpx);
  height: calc(100% - 20rpx);
  margin: 10rpx;
  background: #c4c4c4;
  border-radius: 100%;
}

.page_item {
  width: calc(100% - 40rpx);
  height: 120rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #efefef;
}

.page_item text {
  width: 100%;
  height: 100%;
  line-height: 120rpx;
  font-size: 15px;
  color: #646464;
}

.page_item image {
  height: 40rpx;
  width: 20rpx;
  position: absolute;
  right: 20rpx;
  margin-top: 40rpx;
}
