/* pages/identity/identity.wxss */

.page {
  width: 100%;
  height: 100%;
  border-top: 1px solid #c4c4c4;
}

.page_item {
  width: calc(100% - 40rpx);
  padding: 0 20rpx;
  height: 120rpx;
  border-bottom: 1px solid #efefef;
}

.page_item  text {
  color: #646464;
  display: inline-block;
  font-size: 16px;
  position: absolute;
  margin: 0;
  height: 120rpx;
  line-height: 120rpx;
}

.page_item image {
  height: 40rpx;
  width: 20rpx;
  position: absolute;
  right: 20rpx;
  margin-top: 40rpx;
}
