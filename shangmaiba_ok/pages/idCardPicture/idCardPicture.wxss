/* pages/idCardPicture/idCardPicture.wxss */

.page {
  width: 100%;
  height: 100%;
  position: fixed;
  border-top: 1px solid #c4c4c4;
  overflow-y: auto;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.item {
  width: calc(100% - 40rpx);
  height: 460rpx;
  padding: 20rpx;
}

.item text {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 15px;
  width: 100%;
  color: #646464;
  display: inline-block;
}

.item image {
  width: 100%;
  height: 360rpx;
}
