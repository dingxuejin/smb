/* pages/release/release.wxss */

.page_out {
  width: 100%;
  overflow-x: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.page {
  width: 100%;
}

.page_top {
  width: calc(100% - 80rpx);
  margin: 20rpx 40rpx;
  height: 360rpx;
}

.page_top image {
  height: 100%;
  width: 100%;
}

.info {
  width: 100%;
  margin: 20rpx 0;
  max-height: 400rpx;
}

.video {
  width: 100%;
  height: 400rpx;
}

.video  video {
  width: 100%;
  height: 400rpx;
}

.audio {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: center;
}

.page_item {
  height: 60rpx;
  width: calc(100% - 40rpx);
  padding: 20rpx;
  border-bottom: 1px solid #efefef;
}

.page_item_title {
  line-height: 60rpx;
  height: 60rpx;
  color: #646464;
  font-size: 14px;
  float: left;
  display: inline-block;
}

.page_item_title text {
  color: #dd5656;
}

.page_item textarea {
  color: #646464;
  height: 180rpx;
  font-size: 14px;
  float: right;
  /* display: inline-block; */
  width: calc(100% - 200rpx);
}

.page_item_input {
  color: #646464;
  height: 60rpx;
  float: right;
  font-size: 14px;
  line-height: 60rpx;
  min-width: 500rpx;
  width: calc(100% - 200rpx);
}

.page_item picker {
  color: #646464;
  height: 60rpx;
  float: right;
  font-size: 14px;
  line-height: 60rpx;
  width: calc(100% - 200rpx);
}

.picker {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.page_item_content {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  float: right;
  margin-right: 10rpx;
  right: 60rpx;
  color: #646464;
}

.page_item image {
  width: 20rpx;
  height: 40rpx;
  margin-top: 10rpx;
  float: right;
  right: 20rpx;
}

.page_paper {
  height: 60rpx;
  width: calc(100% - 40rpx);
  padding: 20rpx;
}

.page_paper_content {
  height: 60rpx;
  display: inline-block;
  float: left;
  color: #c4c4c4;
  font-size: 14px;
  line-height: 60rpx;
}

.page_paper checkbox-group {
  width: 50rpx;
  float: left;
}

checkbox .wx-checkbox-input {
  border: 1px solid #dd5656;
  border-radius: 0;
  height: 30rpx;
  width: 30rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  font-size: 30rpx;
  color: #dd5656;
}

.commit_btn {
  height: 40px;
  width: calc(100% - 20px);
  padding: 10px;
  background: #efefef;
}

.commit_btn button {
  height: 40px;
  width: 100%;
  text-align: center;
  line-height: 40px;
  color: #c4c4c4;
  font-size: 16px;
}

.dialog_bg {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
}

.dialog {
  width: 400rpx;
  height: 400rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -300rpx 0 0 -200rpx;
  background: #c4c4c4;
  border-radius: 4px;
}

.dialog_title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 16px;
  background: white;
  color: #646464;
}

.dialog_audio_in {
  height: 220rpx;
  background: white;
  width: 400rpx;
  margin-top: 1px;
}

.dialog_audio_in cover-image {
  height: 150rpx;
  width: 150rpx;
  margin: 40rpx 0 0 125rpx;
}

.dialog_close {
  width: 400rpx;
  height: 100rpx;
  background: white;
}

.dialog_close_btn {
  width: 200rpx;
  margin: 15rpx 100rpx 20rpx 100rpx;
  height: 70rpx;
  background: #efefef;
  border-radius: 5px;
  line-height: 70rpx;
  text-align: center;
  font-size: 14px;
  color: #646464;
}
