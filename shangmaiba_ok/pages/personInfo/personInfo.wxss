/* pages/personal/personal.wxss */

.page {
  width: 100%;
  height: 100%;
  position: fixed;
  border-top: 1px solid #c4c4c4;
}

.page_item {
  width: calc(100% - 40rpx);
  padding: 0 20rpx;
  height: 140rpx;
  border-bottom: 1px solid #efefef;
}

.page_item  text {
  color: #646464;
  display: inline-block;
  font-size: 16px;
  position: absolute;
  margin: 0;
  height: 140rpx;
  line-height: 140rpx;
}

.page_item  picker {
  color: #646464;
  display: inline-block;
  font-size: 16px;
  position: absolute;
  right: 20rpx;
  margin: 0;
  width: 550rpx;
  text-align: right;
  height: 140rpx;
  line-height: 140rpx;
}

.page_item  image {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 20rpx;
  border-radius: 100rpx;
  margin-top: 20rpx;
}

.btn_save {
  width: calc(100% - 40rpx);
  height: 100rpx;
  text-align: center;
  font-size: 16px;
  line-height: 100rpx;
  margin-top: 20rpx;
  color: #646464;
}
